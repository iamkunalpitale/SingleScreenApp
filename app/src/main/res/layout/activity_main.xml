<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:isScrollContainer="true"
    android:fillViewport="true">

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040404"
    tools:context="com.example.android.singlescreenapp.MainActivity">

    <LinearLayout
        android:id="@+id/layoutTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:layout_width="380dp"
            android:layout_height="150dp"
            android:src="@drawable/goldsgymlogo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:layout_marginTop="185dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/descriptionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Gold's Gym International, Inc. is an American chain of international co-ed fitness centers (commonly referred to as gyms) originally started by Joe Gold in Venice Beach, California ."
            android:textColor="#FFFF00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/layout_line">


        <ImageView
            android:id="@+id/pinLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pin"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="18dp"
        android:layout_below="@id/layout_line">

        <TextView
            android:id="@+id/addressTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5th and, 6th Floor, BCM Health Island Building, Above Totall Diabetes, PU/4, Scheme No-54, Vasanth Vihar Colony, Indore, Madhya Pradesh 452010"
            android:textColor="#FFFF00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:orientation="vertical"
        android:layout_below="@id/layout_line2">

        <ImageView
            android:id="@+id/phoneImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mobilephone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="22dp"
        android:layout_below="@id/layout_line2">


        <TextView
            android:id="@+id/phoneTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="0731 406 4803"
            android:textColor="#FFFF00"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="18dp"
        android:orientation="horizontal"
        android:layout_below="@id/layout_line4">

        <ImageView
            android:id="@+id/letterImage"
            android:src="@drawable/letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="65dp"
        android:layout_below="@id/layout_line4">

        <TextView
            android:id="@+id/emailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WeCare@GoldsGym.in"
            android:textColor="#FFFF00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:orientation="horizontal"
        android:layout_below="@id/layout_line6">

        <ImageView
            android:id="@+id/websiteImage"
            android:src="@drawable/globe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_line8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="65dp"
        android:layout_below="@id/layout_line6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wesbiteTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://www.goldsgym.com/"
            android:textColor="#FFFF00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/layout_line8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/layout_line7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow us"
            android:textSize="20sp"
            android:textColor="#FFFF00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/followusImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="115dp"
        android:layout_below="@id/layout_line7"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/facebook"
            android:src="@drawable/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/instagram"/>

    </LinearLayout>



















</RelativeLayout>
</ScrollView>